<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>   
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>        
        <item name="android:background">@drawable/ab_solid_light_holo2</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="MyActionBarSubTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    
</resources>