<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f5f7"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".NewTrainingActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_training_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:text="Nuovo Allenamento"
                android:textColor="#828a9b"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        	android:background="@drawable/new_training_layout"
        	android:focusable="true"
        	android:focusableInTouchMode="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Nome Allenamento:"
                    android:textColor="#828a9b" />

                <EditText
                    android:id="@+id/trainingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="0dp"
                    android:ems="10"
                    android:gravity="center_horizontal|center"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:text="Allenamento" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Ora inizio:"
                    android:textColor="#828a9b" />

                <Button
                    android:id="@+id/startHourButton"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center"
                    android:text="Button" />
            </LinearLayout>

            <View
                android:id="@+id/View02"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Ora fine:"
                    android:textColor="#828a9b" />

                <Button
                    android:id="@+id/endHourButton"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center"
                    android:text="Button" />
            </LinearLayout>

            <View
                android:id="@+id/View01"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="40dp" >

                <Button
                    android:id="@+id/addGroupButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/add_group_ex_selector"
                    android:padding="15dp"
                    android:text="Aggiungi gruppo di lavoro"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/addExercisesButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/add_group_ex_selector"
                    android:padding="15dp"
                    android:text="Aggiungi esercizi"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
