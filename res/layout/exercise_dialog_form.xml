<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f5f7"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context=".NewTrainingActivity" >

    <!-- Contenitore vero e proprio di tutta la dialog -->
    <RelativeLayout
        android:id="@+id/dialog_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Contenitore del form per la modifica dell'esercizio -->
        <LinearLayout
            android:id="@+id/exercise_form"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	        	android:background="@drawable/new_training_layout"
	        	android:focusable="true"
	        	android:focusableInTouchMode="true" >
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp"
	                android:paddingLeft="13dp"
	                android:paddingRight="13dp"
	                android:paddingTop="20dp" >
	
	                <TextView
	                    android:id="@+id/numRipText"
	                    android:layout_width="90dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left|center_vertical"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center"
	                    android:text="Numero Ripetizioni:"
	                    android:textColor="#828a9b" />
	
	                
					<LinearLayout
                    	android:layout_width="match_parent"
                    	android:layout_height="wrap_content"
                    	android:layout_gravity="right|center_vertical" >

	                    <Button
	                        android:id="@+id/decRip"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:background="@drawable/add_group_ex_selector"
	                        android:minHeight="40dip"
	                        android:minWidth="40dip"
	                        android:text="-"
	                        android:textColor="#ffffff"
	                        android:textSize="20sp" />
	
	                    <EditText
	                        android:id="@+id/editRip"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_weight="1"
	                        android:gravity="center_vertical|center_horizontal"
	                        android:inputType="number"
	                        android:maxLines="1"
	                        android:minWidth="60dip"
	                        android:selectAllOnFocus="true"
	                        android:text="1" >
	
	                        <requestFocus />
	                    </EditText>
	
	                    <Button
	                        android:id="@+id/incRip"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:background="@drawable/add_group_ex_selector"
	                        android:minHeight="40dip"
	                        android:minWidth="40dip"
	                        android:text="+"
	                        android:textColor="#ffffff"
	                        android:textSize="20sp" />

             	   </LinearLayout>
	                
	
	            </LinearLayout>
	
	            <View
	                android:id="@+id/View01"
	                android:layout_width="wrap_content"
	                android:layout_height="0.5dp"
	                android:background="#dadae4"
	                android:padding="0dp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp"
	                android:paddingLeft="13dp"
	                android:paddingRight="13dp"
	                android:paddingTop="20dp" >
	
	                <TextView
	                    android:id="@+id/ripetizioniText"
	                    android:layout_width="90dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left|center_vertical"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center"
	                    android:text="Distanza (m):"
	                    android:textColor="#828a9b" />
	
	                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/decDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="40dip"
                        android:text="-"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minWidth="60dip"
                        android:selectAllOnFocus="true"
                        android:text="25" />

                    <Button
                        android:id="@+id/incDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="40dip"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </LinearLayout>

	
	            </LinearLayout>
	
	            <View
	                android:id="@+id/separator1"
	                android:layout_width="wrap_content"
	                android:layout_height="0.5dp"
	                android:background="#dadae4"
	                android:padding="0dp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp"
	                android:paddingLeft="13dp"
	                android:paddingRight="13dp"
	                android:paddingTop="20dp" >
	
	                <TextView
	                    android:id="@+id/textView2"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left|center_vertical"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center"
	                    android:text="Stile:"
	                    android:textColor="#828a9b" />
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical" >
	
	                    <Spinner
	                        android:id="@+id/spinnerStyle1"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_marginBottom="5dp"
	                        android:layout_marginTop="5dp"
	                        android:layout_weight="1"
	                        android:spinnerMode="dropdown" />
	
	                    <Spinner
	                        android:id="@+id/spinnerStyle2"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_marginBottom="5dp"
	                        android:layout_marginTop="5dp"
	                        android:layout_weight="1"
	                        android:spinnerMode="dropdown" />
	
	                </LinearLayout>
	
	            </LinearLayout>
	
	            <View
	                android:id="@+id/separator2"
	                android:layout_width="wrap_content"
	                android:layout_height="0.5dp"
	                android:background="#dadae4"
	                android:padding="0dp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp"
	                android:paddingLeft="13dp"
	                android:paddingRight="13dp"
	                android:paddingTop="20dp" >
	
	                <TextView
	                    android:id="@+id/textView3"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left|center_vertical"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center"
	                    android:text="Andatura:"
	                    android:textColor="#828a9b" />
	
	                <Spinner
	                    android:id="@+id/andatureSpinner"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:spinnerMode="dropdown" />
	
	            </LinearLayout>
	
	            <View
	                android:id="@+id/separator3"
	                android:layout_width="wrap_content"
	                android:layout_height="0.5dp"
	                android:background="#dadae4"
	                android:padding="0dp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp"
	                android:paddingLeft="13dp"
	                android:paddingRight="13dp"
	                android:paddingTop="20dp" >
	
	                <TextView
	                    android:id="@+id/TextView01"
	                    android:layout_width="90dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left|center_vertical"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center"
	                    android:text="Tempo di Percorrenza:"
	                    android:textColor="#828a9b" />
	
	                <Button
	                    android:id="@+id/PercorrenzaTimePicker"
	                    style="?android:attr/spinnerStyle"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="right|center_vertical"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginRight="10dp"
	                    android:gravity="center_vertical|center"
	                    android:text="Button" />
	            </LinearLayout>
	
	        </LinearLayout>
	        
        </LinearLayout>
        
		<!-- View che mostra una sottile linea nera per separare i bottoni di chiusura/conferma con il form -->
    	<View
	        android:id="@+id/black_line"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dip"
	        android:layout_below="@+id/exercise_form"
	        android:layout_marginTop="10dp"
	        android:background="@color/line_background" />
    
		<!-- Bottone di cancel -->
    
   		<!-- Bottone di conferma delle modifiche -->

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/black_line" >

    	    <Button
    	        android:id="@+id/cancel_button"
    	        style="?android:attr/buttonBarButtonStyle"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="left"
    	        android:layout_weight="1"
    	        android:minHeight="55dp"
    	        android:minWidth="70dp"
    	        android:text="Cancella"
    	        android:textColor="@color/done_text_color"
    	        android:textSize="@dimen/done_label_size" />

    	    <View
    	        android:id="@+id/view1"
    	        android:layout_width="0.5dp"
    	        android:layout_height="match_parent"
    	        android:layout_weight="0"
    	        android:background="@color/line_background" />

    	    <Button
    	        android:id="@+id/done_button"
    	        style="?android:attr/buttonBarButtonStyle"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="right"
    	        android:layout_weight="1"
    	        android:minHeight="55dp"
    	        android:minWidth="70dp"
    	        android:text="Ok"
    	        android:textColor="@color/done_text_color"
    	        android:textSize="@dimen/done_label_size" />

    	</LinearLayout>

    </RelativeLayout>
    
       
</ScrollView>

