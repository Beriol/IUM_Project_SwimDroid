<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f5f7"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".NewTrainingActivity" >

    <LinearLayout
        android:id="@+id/newExContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:text="Nuovo Esercizio"
                android:textColor="#828a9b"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        	android:background="@drawable/new_training_layout"
        	android:focusable="true"
        	android:focusableInTouchMode="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/numRipText"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Numero Ripetizioni:"
                    android:textColor="#828a9b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical" >

                    <Button
                        android:id="@+id/decRip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="60dip"
                        android:text="-"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editRip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minWidth="60dip"
                        android:selectAllOnFocus="true"
                        android:text="1" >

                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@+id/incRip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="60dip"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/View01"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/ripetizioniText"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Distanza (m):"
                    android:textColor="#828a9b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/decDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="60dip"
                        android:text="-"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minWidth="60dip"
                        android:selectAllOnFocus="true"
                        android:text="25" />

                    <Button
                        android:id="@+id/incDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_group_ex_selector"
                        android:minHeight="40dip"
                        android:minWidth="60dip"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator1"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Stile:"
                    android:textColor="#828a9b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/spinnerStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/spinnerStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator2"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Andatura:"
                    android:textColor="#828a9b" />

                <Spinner
                    android:id="@+id/andatureSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <View
                android:id="@+id/separator3"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#dadae4"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Tempo di Percorrenza:"
                    android:textColor="#828a9b" />

                <Button
                    android:id="@+id/PercorrenzaTimePicker"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center"
                    android:text="Button" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
